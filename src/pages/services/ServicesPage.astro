import Service from "./Service.astro";

const sections = [
  {
    title: "Development",
    image: service1.src,
    technologies: [
      "Webflow",
      "Framer",
      "C#",
      "Laravel",
      "MongoDB",
      "JavaScript",
      "C++",
      "Node.Js",
      "Angular",
      "VueJS",
      "React.Js",
    ],
  },
  {
    title: "UI/UX & Graphic Design",
    image: service2.src,
    technologies: [
      "Figma",
      "Illustrator",
      "Photoshop",
      "Adobe XD",
      "Stark",
      "Zeplin",
      "Sketch",
    ],
  },
  {
    title: "Digital Marketing",
    image: service3.src,
    technologies: [
      "Notion",
      "Buffer",
      "Tableau",
      "Power BI",
      "Llamalndex",
      "Looker Studio",
      "SEMRush",
      "Google Gemini APl",
      "Adobe Express",
      "Meta Business Suite",
      "Ahrefs",
      "Google Cloud Vortex AI",
      "MailChimp",
      "Google Marketing Platform",
      "Google Ads",
      "LinkedIn Campaign Manager",
      "Azure AI",
      "Tag Manager/Google Analytics",
    ],
  },
  {
    title: "AI Integration & Consulting",
    image: service4.src,
    technologies: [
      "OpenAI",
