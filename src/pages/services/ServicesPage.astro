---

<section
  id="services"
  class="flex flex-col w-full justify-center items-center gap-8 px-[60px] py-[96px] relative bg-black"
>
  <h1
    class="relative w-[1320px] mt-[-1.00px] font-sans font-medium text-white text-base tracking-[0] leading-[22.4px] whitespace-nowrap"
  >
    Services
  </h1>
  {
    sections.map((section, index) => (
      <Service
        key={index}
        title={section.title}
        image={section.image}
        technologies={section.technologies}
      />
    ))
  }
</section>
