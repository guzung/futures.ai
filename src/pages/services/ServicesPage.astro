---

<section
  id="services"
  class="flex flex-col w-full justify-center items-center gap-[32px] md:gap-8 px-[21px] md:px-[60px] py-[96px] relative bg-black"
>
  <h1
    class="relative w-full mt-[-1.00px] font-sans font-medium text-white text-base tracking-[0] leading-[22.4px] whitespace-nowrap"
  >
    Services
  </h1>
  {
    sections.map((section, index) => (
      <Service
        key={index}
        title={section.title}
        image={section.image}
        imageMobile={section.imageMobile}
        technologies={section.technologies}
      />
    ))
  }
</section>
