---
const { title, description, image } = Astro.props;
---

<article class="flex flex-col justify-center w-full items-center relative">
  <div
    class="flex flex-col items-center gap-[23px] relative w-full max-w-[1280px] flex-[0_0_auto]"
  >
    <picture>
      <img src={image} alt="feature project" />
    </picture>
    <header
      class="inline-flex flex-col w-full items-start justify-center gap-0 relative flex-[0_0_auto]"
    >
      <p
        class="relative w-fit font-sans font-medium text-[#666666] text-lg tracking-[0] leading-[25.2px]"
      >
        {title}
      </p>
      <h1
        class="relative w-fit mt-[-1.00px] font-sans font-medium text-black text-2xl tracking-[0] leading-[33px]"
      >
        {description}
      </h1>
    </header>
  </div>
</article>
