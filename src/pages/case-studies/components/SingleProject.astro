---
const { title, description, image } = Astro.props;
---

<article class="flex flex-col justify-center w-full items-center relative">
  <div
    class="flex flex-col items-center gap-[15px] lg:gap-[23px] relative w-full"
  >
    <picture>
      <img src={image} />
    </picture>
    <header
      class="inline-flex flex-col w-full items-start justify-center gap-0 relative"
    >
      <p
        class="relative w-fit font-sans font-medium text-[#666666] text-[18px] md:text-[12.18px] lg:text-[18px] tracking-[0] leading-[25.2px] md:leading-[17px]"
      >
        {title}
      </p>
      <h1
        class="relative w-fit mt-[-1.00px] font-sans font-medium text-black text-[20px] md:text-[16.24px] lg:text-[24px] tracking-[0] leading-[28px] md:leading-[22.7px] lg:leading-[33px]"
      >
        {description}
      </h1>
    </header>
  </div>
</article>
