---
import WhyUsImage from "../../assets/why-us.svg";

const contentData = {
  mainText:
    "We blend smart UI/UX design, powerful development, strategic SMM, and cutting-edge AI integration to deliver tailored digital solutions.",
  highlightText: "Clients choose us",
  continuationText:
    "for our clarity, speed, and results-driven mindset that transforms ideas into scalable, high-performing products across industries.",
};
---

<section
  class="flex items-center justify-center px-[21px] pt-[12px] pb-[96px] lg:px-[46px] lg:py-[96px] xl:px-[30px] relative bg-white"
  role="main"
  aria-labelledby="why-us-heading"
>
  <div class="grid grid-cols-1 xl:grid-cols-2 gap-[30px] w-full">
    <div
      class="w-full col-span-1 px-4 py-[22px] bg-[#f1f7ff] rounded-[31px] flex items-center relative overflow-hidden"
    >
      <div
        class="w-full h-auto md:h-[486px] gap-2.5 py-8 md:py-[216px] flex items-center relative"
      >
        <div
          class="relative w-full max-w-full md:max-w-[600px] xl:max-w-[500px] 2xl:max-w-[661px] xl:h-[486px] font-sans font-medium text-black text-[28px] sm:text-[32px] xl:text-[28px] 2xl:text-[38px] tracking-[0] leading-[1.4] md:leading-[54px] whitespace-normal break-words"
        >
          {contentData.mainText}
          <span
            id="why-us-heading"
            class="relative w-fit mt-1.5 bg-gradient-to-l from-[#3691ff] to-[#031ee5] bg-clip-text text-transparent font-sans font-medium sm:text-[32px] xl:text-[28px] 2xl:text-[38px] leading-[1.4] md:leading-[54px] whitespace-nowrap"
          >
            {contentData.highlightText}
          </span>
          {contentData.continuationText}
        </div>
      </div>
    </div>
    <div>
      <img
        class="relative w-full h-auto object-cover"
        alt="Professional team members showcasing our collaborative approach and expertise"
        src={WhyUsImage.src}
        loading="lazy"
      />
    </div>
  </div>
</section>
