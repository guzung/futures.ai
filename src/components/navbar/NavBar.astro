---
import Logo from "./Logo.astro";
import MenuMobile from "./NavBarMobile.astro";
import Navigation from "./Navigation.astro";
import ReachOut from "./ReachOut.astro";

const navigationItems = [
  { label: "About Us", href: "#about-us" },
  { label: "Case Studies", href: "#case-studies" },
  { label: "Services", href: "#services" },
];
---

<nav
  class="inline-flex flex-col items-center justify-center w-full px-4 py-4 sm:px-8 sm:py-6 md:px-16 md:py-8 lg:px-24 lg:py-8 relative bg-white"
  role="navigation"
  aria-label="Main navigation"
>
  <header
    class="hidden md:flex flex w-[592px] h-[74px] items-center justify-center gap-8 p-[18px] relative rounded-3xl border border-solid border-[#ececec]
    bg-[linear-gradient(180deg,rgba(255,255,255,1)_0%,rgba(250,250,250,1)_100%)] hover:opacity-90 transition-opacity"
  >
    <Logo />
    <Navigation navigationItems={navigationItems} />
    <ReachOut />
  </header>
  <MenuMobile navigationItems={navigationItems} />
</nav>
