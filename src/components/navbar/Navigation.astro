---
const navigationItems = [
  { label: "About Us", href: "#about" },
  { label: "Case Studies", href: "#case-studies" },
  { label: "Services", href: "#services" },
];
---

<nav
  class="hidden md:block inline-flex items-center relative"
  role="navigation"
  aria-label="Main navigation"
>
  {
    navigationItems.map((item) => (
      <a
        href={item.href}
        class="relative w-fit mt-[-1.00px] pr-[10px] font-sans font-semibold text-[#14191c] text-sm tracking-[0] leading-[normal] hover:opacity-80 transition-opacity focus:outline-2 focus:outline-offset-2 focus:outline-[#14191c]"
      >
        {item.label}
      </a>
    ))
  }
</nav>
